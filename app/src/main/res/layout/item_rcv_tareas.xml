<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/azul_claro"
        card_view:cardCornerRadius="5dp"
        card_view:cardElevation="5dp"
        card_view:cardUseCompatPadding="true"
        card_view:contentPadding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.8">

                <ToggleButton
                    android:id="@+id/btn_Estado"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@android:color/transparent"
                    android:button="@drawable/estado_tarea"
                    android:minWidth="24dp"
                    android:textOff=""
                    android:textOn="" />

                <TextView
                    android:id="@+id/txt_Titulo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:text="TextView"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="2dp"
                android:layout_weight="2.2">

                <Button
                    android:id="@+id/btn_Editar"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_margin="1.2dp"
                    android:layout_weight="1"
                    android:background="@drawable/boton_modelo"
                    android:drawableLeft="@drawable/ic_baseline_edit_24"
                    android:padding="11dp" />

                <Button
                    android:id="@+id/btn_Eliminar"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_margin="1.2dp"
                    android:layout_weight="1"
                    android:background="@drawable/boton_modelo"
                    android:drawableLeft="@drawable/ic_baseline_delete_24"
                    android:padding="11dp" />
            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/azul_fuerte" />
</LinearLayout>